@using Microsoft.AspNetCore.Identity
@using Restaurant.Data.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

        <li>
            <a class="cart-icon text-red" href="/Cart/GetUserCart">
                <!-- Replace "/Cart" with the appropriate URL for your shopping cart page -->
                <i class="fa fa-shopping-cart"></i> <!-- This is the Font Awesome icon for the shopping cart -->
                <span class="badge badge-pill badge-danger cart-badge">3</span> <!-- You can use this badge to show the number of items in the cart -->
            </a>
        </li>

    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>

      
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
