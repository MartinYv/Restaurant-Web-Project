@using Restaurant.ViewModels.Models.Menu;
@using Restaurant.Web.Infrastucture.Extentions;

@model AllMenuDishesQueryViewModel

@{
    ViewBag.Title = "Our dishes";
}

<head>
    <!-- Include Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<!-- Form for filtering options -->
<form method="get" id="filterForm">
    <!-- ... Your filtering options ... -->
</form>

@{
    int previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    int maxPage = (int)Math.Ceiling((double)Model.TotalDishes / Model.DishesPerPage);
}

<div class="row mb-5">
    <!-- Pagination links -->
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Menu"
           asp-action="AllMenuDishes"
           asp-route-currentPage="@previousPage"
           asp-route-menuId="@Model.MenuId"
           asp-route-DishesPerPage="@((int)Model.DishesPerPage)"><<</a>
    </div>

    @{
        bool shouldNextPageBeDisabled = Model.CurrentPage == maxPage || !Model.Dishes.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary @(shouldNextPageBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Menu"
           asp-action="AllMenuDishes"
           asp-route-menuId="@Model.MenuId"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-DishesPerPage="@((int)Model.DishesPerPage)">>></a>
    </div>
</div>

@if (!Model.Dishes.Any())
{
    <h2 class="text-center">No dishes found by the given criteria!</h2>
}
else
{
    <!-- Dish cards with "Add to Cart" buttons -->
    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var dish in Model.Dishes)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@dish.ImageUrl" class="card-img-top" alt="Dish Image" style="width: 18rem; height: 15rem;">
                        <div class="card-body">
                            <h5 class="card-title">@dish.Name</h5>
                            <p class="card-text">@dish.Description</p>
                            <p class="card-text">Price: @dish.Price lv.</p>
                        </div>
                        <!-- Add to Cart button with onclick event -->
                        <button type="button" class="btn btn-primary btn-sm" onclick="addToCart(@dish.Id)">Add to Cart</button>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Bootstrap Toast notification -->
<div id="cart-toast" class="toast align-items-center text-white bg-success border-0 mt-3" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">
            Item added to cart!
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>



<!-- Include jQuery and Bootstrap JavaScript -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<!-- Include Bootstrap JavaScript from CDN -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Script section for handling the AJAX request and showing the Toast notification -->
<script>
    function addToCart(dishId) {
        // AJAX request to add item to the cart
        $.post("/Cart/AddItem", { dishId: dishId }, function (data) {
            // On success, update the cart count and display success message
            if (data.success) {
                // Update the cart count in the HTML
                $("#cartCount").text(data.cartCount);

                // Display the success message with the cart count
                const cartCountMessage = `Item added to cart. Cart now contains ${data.cartCount} items.`;
                // Show the success message using Bootstrap alert
                $("#successMessage").text(cartCountMessage).addClass("alert alert-success").fadeIn().delay(3000).fadeOut();
            }
        });
    }
</script>