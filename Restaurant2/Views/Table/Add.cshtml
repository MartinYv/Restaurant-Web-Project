@using Restaurant.ViewModels.Models.Table;

@model AddTableViewModel

@{
	ViewBag.Title = "Add Table";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Add" method="post">

			<div class="mb-3">
				<label asp-for="@Model.Number" class="form-label">Number</label>
				<input asp-for="@Model.Number" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Number" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.Seats" class="form-label">Seats</label>
				<input asp-for="@Model.Seats" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Seats" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Add" />
				@*               <a asp-area="" asp-controller="DishType" asp-action="Add">Add Dish Type</a>
				*@
			</div>
		</form>
	</div>
</div>


