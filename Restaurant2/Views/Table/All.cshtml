@using Restaurant.ViewModels.Models.Table;


@model IEnumerable<AllTablesViewModel>
@{
    ViewBag.Title = "All Dishes";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var table in Model)
    {    
           <div>
                <p class="mb-0">Author: @table.Number</p>
                <p class="mb-0">Rating: @table.Seats</p>
            </div>

        <form class="input-group-sm" asp-controller="Table" asp-action="Delete" asp-route-id="@table.Id">
                <input type="submit" value="Delete" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
            @*            <a href="/Book/Edit/@dish.Id" class="btn btn-warning">Edit</a> *@
       
    }
</div>
