@using Restaurant.Data.Models;
@model Cart

<h1>Shopping Cart</h1>

@if (Model.CartItems.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>
                    <img src="@item.Dish.ImageUrl" alt="@item.Dish.Name" />
                    <span>@item.Dish.Name</span>
                </td>
                <td>
                    <form method="post" action="@Url.Action("UpdateQuantity", "ShoppingCart")">
                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                        <input type="number" name="quantity" value="@item.Quantity" min="1" />
                        <button type="submit">Update</button>
                    </form>
                </td>
                <td>$@item.Dish.Price</td>
                <td>$@(item.Quantity * item.Dish.Price)</td>
                <td>
                    <form method="post" action="@Url.Action("RemoveItem", "ShoppingCart")">
                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    <form method="post" action="@Url.Action("ClearCart", "ShoppingCart")">
        <button type="submit">Clear Cart</button>
    </form>
}
