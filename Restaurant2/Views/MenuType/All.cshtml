@using Restaurant.ViewModels.Models.Menu;

@model IEnumerable<AllMenuTypesViewModel>
@{
	ViewBag.Title = "All Menu Types";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
	@foreach (var type in Model)
	{

		<p class="mb-0">Type Id: @type.Id</p>
		<p class="mb-0">Type Name: @type.Name</p>

		<form asp-controller="MenuType" asp-action="Delete" method="post">
			<input type="hidden" name="typeId" value="@type.Id" />
			<button type="submit">Delete</button>
		</form>
	}
</div>